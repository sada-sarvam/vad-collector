# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vad-collector?retryWrites=true&w=majority

# Google Cloud / Gemini (Vertex AI)
GOOGLE_PROJECT_ID=dap-development
GOOGLE_LOCATION=global
GEMINI_MODEL_ID=gemini-2.5-flash

# GCP Credentials - For local development, set path to service account JSON
GOOGLE_APPLICATION_CREDENTIALS_PATH=/path/to/your/gcs_key.json

# For Vercel deployment - set GOOGLE_CREDENTIALS_JSON secret with full JSON content
# GOOGLE_CREDENTIALS_JSON={"type":"service_account",...}

# Google Cloud Storage (for audio files)
GCS_BUCKET=audiotextdata
GCS_PREFIX=sadakopa/semantic-vad/benchmark_collections

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
